<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCafe</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
            <button class="navbar-toggler" type="button" data-toggler="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <span class="navbar-brand">ながのCAKE</span>
            <div class="collapse navbar-collapse justify-content-end">
                <ul class="navbar-nav">
                    <% if admin_signed_in? %>
                      <li class="nav-item">
                        <%= link_to '商品一覧', admin_items_path, class: 'nav-link text-light' %>
                      </li>
                      <li class="nav-item">
                        <%= link_to '会員一覧', admin_customers_path, class: 'nav-link text-light' %>
                      </li>
                      <li class="nav-item">
                        <%= link_to '注文履歴一覧', admin_path, class: 'nav-link text-light' %>
                      </li>
                      <li class="nav-item">
                        <%= link_to 'ジャンル一覧', admin_genres_path, class: 'nav-link text-light' %>
                      </li>
                      <li class="nav-item">
                        <%= link_to 'ログアウト', destroy_admin_session_path, method: :delete, class: 'nav-link text-light' %>
                      </li>
                    <% elsif customer_signed_in? %>
                      <li class="nav-item">
                        <%= link_to 'マイページ', my_page_path, class: 'nav-link text-light' %>
                      </li>
                      <li class="nav-item">
                        <%= link_to '商品一覧', items_path, class: 'nav-link text-light' %>
                      </li>
                      <li class="nav-item">
                        <%= link_to 'カート', cart_items_path, class: 'nav-link text-light' %>
                      </li>
                      <li class="nav-item">
                        <%= link_to 'ログアウト', destroy_customer_session_path, method: :delete, class: 'nav-link text-light' %>
                      </li>
                    <% else %>
                        <li class="nav-item">
                            <%= link_to 'About', about_path, class: 'nav-link text-light' %>
                        </li>
                        <li class="nav-item">
                            <%= link_to '商品一覧', about_path, class: 'nav-link text-light' %>
                        </li>
                        <li class="nav-item">
                            <%= link_to '新規登録', new_customer_registration_path, class: 'nav-link text-light' %>
                        </li>
                        <li class="nav-item">
                            <%= link_to 'ログイン', new_customer_session_path, class: 'nav-link text-light' %>
                        </li>
                    <% end %>
                </ul>
            </div>
        </nav>
    </header>
    <%= yield %>
  </body>
</html>
