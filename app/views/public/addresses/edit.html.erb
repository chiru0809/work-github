<div class="container">
  <div class="row mt-4">
    <h3>配送先登録/一覧</h3>
  </div>
  <div class="row">
    <%= form_with model: @address, url: address_path do |f| %>
      <table class="table table-borderless">
        <tr>
          <th>郵便番号(ハイフンなし)</th><td><%= f.text_field :postal_code %></td>
        </tr>
        <tr>
          <th>住所</th><td><%= f.text_field :address %></td>
        </tr>
        <tr>
          <th>宛名</th><td><%= f.text_field :name %></td><td><%= f.submit '変更内容を保存', class: "btn btn-success" %></td>
        </tr>
      </table>
    <% end %>
  </div>
</div>