<div class="container mt-5">
  
  <h4>新規会員登録</h4>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
  
  <div class="row mb-2">
      <table class="table table-borderless col-10">
        <tr>
          <th>名前</th>
          <td>(姓) <%= f.text_field :last_name %></td>
          <td>(名) <%= f.text_field :first_name %></td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td>(セイ) <%= f.text_field :last_name_kana %></td>
          <td>(メイ) <%= f.text_field :first_name_kana %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
        </tr>
        <tr>
          <th>郵便番号(ハイフンなし)</th>
          <td><%= f.text_field :postal_code %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= f.text_field :address %></td>
        </tr>
        <tr>
          <th>電話番号(ハイフンなし)</th>
          <td><%= f.text_field :telephone_number %></td>
        </tr>
        <tr>
          <th>パスワード(6文字以上)</th>
          <td>
            <% if @minimum_password_length %>
        <!--<em>(<%= @minimum_password_length %> characters minimum)</em>-->
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password" %>
          </td>
        </tr>
        <tr>
          <th>パスワード(確認用)</th>
          <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
        </tr>
      </table>
    </div>
  
    <div class="actions">
      <%= f.submit "新規登録", class: "btn btn-success" %>
    </div>
  <% end %>

  <h4 class="mt-4">すでに登録済みの方</h4>
  <p><%= link_to 'こちら', new_customer_session_path %>からログインしてください。</p>

</div>

