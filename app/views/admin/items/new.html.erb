<div class="container">
  <div class="row mt-4">
    <h3>商品新規登録</h3>
  </div>
  <div class="row justify-content-center">
    <%= form_with model: @item, url: admin_items_path do |f| %>
      <table class="table table-borderless">
        <tr>
          <th>商品画像</th><td><%= f.file_field :image, accept: "image/*", class: "w-100" %></td>
        </tr>
        <tr>
          <th>商品名</th><td><%= f.text_field :name, :placeholder => "商品名" %></td>
        </tr>
        <tr>
          <th>商品説明</th><td><%= f.text_area :introduction, :placeholder => "ここに説明文を記述します" %></td><td><%= f.submit '新規登録', class: "btn btn-success" %></td>
        </tr>
        <tr>
          <th>ジャンル</th><td><%= f.collection_select(:genre_id, Genre.all, :id, :name, {}, {class:"select-box"}) %></td>
        </tr>
        <tr>
          <th>税抜価格</th><td><%= f.number_field :price, :placeholder => "1000" %>円</td>
        </tr>
        <tr>
          <th>販売ステータス</th><td><%= f.radio_button :is_active, :true, checked: true %><%= f.label :is_active, "販売中", {value: :true, style: "border-bottom: 1px solid lightgray;"} %>　
          <%= f.radio_button :is_active, :false %><%= f.label :is_active, "販売停止中", {value: :false, style: "border-bottom: 1px solid lightgray;"} %></td>
        </tr>
      </table>
    <% end %>
  </div>
</div>