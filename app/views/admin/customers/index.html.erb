<div class="container">
  <div class="row mt-4">
    <h3>会員一覧</h3>
  </div>
  <div class="row justify-content-center">
    <div class="col-8">
      <table class="table">
        <thead class="table-active">
          <tr>
            <th>会員ID</th><th>氏名</th><th>メールアドレス</th><th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.id %></td><td><%= customer.last_name %>　<%= customer.first_name %></td>
            <td><%= customer.email %></td>
            <td><%= customer.is_deleted %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>