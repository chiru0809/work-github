<div class="container">
  <div class="row mt-4">
    <h3><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h3>
  </div>
  <div class="row">
    <%= form_with model: @customer, url: admin_customer_path(@customer.id) do |f| %>
      <table class="table table-borderless">
        <tr>
          <th>会員ID</th><td><%= @customer.id %></td>
        </tr>
        <tr>
          <th>氏名</th><td><%= f.text_field :last_name %>　<%= f.text_field :first_name %></td>
        </tr>
        <tr>
          <th>郵便番号</th><td><%= f.text_field :postal_code %></td>
        </tr>
        <tr>
          <th>住所</th><td><%= f.text_field :address %></td>
        </tr>
        <tr>
          <th>電話番号</th><td><%= f.text_field :telephone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th><td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
        </tr>
        <tr>
          <th>会員ステータス</th>
          <td>
            <%= f.radio_button :is_deleted, :false %><%= f.label :is_deleted, "有効", {value: :false, style: "border-bottom: 1px solid lightgray;"} %>　
            <%= f.radio_button :is_deleted, :true %><%= f.label :is_deleted, "退会", {value: :true, style: "border-bottom: 1px solid lightgray;"} %>
          </td>
        </tr>
        <tr>
          <th></th>
          <td>
            <%= f.submit '変更を保存する', class: "btn btn-success" %>　　
          </td>
        </tr>
      </table>
    <% end %>
  </div>
</div>