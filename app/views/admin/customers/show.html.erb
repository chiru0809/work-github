<div class="container">
  <div class="row mt-4">
    <h3><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h3>
  </div>
  <div class="row">
    <table class="table table-borderless">
      <tr>
        <th>会員ID</th><td><%= @customer.id %></td>
      </tr>
      <tr>
        <th>氏名</th>
        <td>
          <%= @customer.last_name %>　<%= @customer.first_name %></td>
      </tr>
      <tr>
        <th>郵便番号</th><td><%= @customer.postal_code %></td>
      </tr>
      <tr>
        <th>住所</th><td><%= @customer.address %></td>
      </tr>
      <tr>
        <th>電話番号</th><td><%= @customer.telephone_number %></td>
      </tr>
      <tr>
        <th>メールアドレス</th><td><%= @customer.email %></td>
      </tr>
      <tr>
        <th>会員ステータス</th>
        <td>
          <% if @customer.is_deleted == false %>
            <strong class="text-success">有効</strong>
          <% else %>
            <strong class="text-secondary">退会</strong>
          <% end %>
        </td>
      </tr>
      <tr>
        <th></th>
        <td>
          <%= form_tag admin_path, method: :get, class: 'boards__searchForm' do %>
            <%= link_to '編集する', edit_admin_customer_path(@customer.id), class: "btn btn-success" %>　　
            <%= link_to '注文履歴一覧を見る', admin_path(customer_id: @customer.id), class: "btn btn-primary" %>
          <% end %>
        </td>
      </tr>
    </table>
  </div>
</div>